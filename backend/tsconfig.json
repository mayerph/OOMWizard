{
  "compilerOptions": {
    "target":"ES6",
    "module": "commonjs",
    "lib": ["es2017"],
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "rootDir": "./src/",
    "resolveJsonModule": true,
    "watch": false,
    "typeRoots": [
      "src/typings/",
      "node_modules/@types/"
    ]
  },
  "exclude": [
    "node_modules",
    "./dist/"
  ]
}